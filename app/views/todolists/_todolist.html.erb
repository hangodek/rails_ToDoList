<div id="<%= dom_id todolist %>">
  <p>
    <strong>Title:</strong>
    <%= todolist.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= todolist.description %>
  </p>

  <p>
    <strong>Completed:</strong>
    <%= todolist.completed ? "Yes" : "No" %>
  </p>

  <p>
    <strong>Deadline:</strong>
    <%= todolist.deadline %>
  </p>

</div>
